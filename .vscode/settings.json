{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.formatOnSave": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#F9E79F", // Change this color!
        "statusBar.foreground": "#212F3D"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.history": true
    },
    "git.ignoreLimitWarning": true,
    // https://github.com/colinhacks/zod/issues/443
    "typescript.tsdk": "node_modules/typescript/lib"
}