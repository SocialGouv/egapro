{
	"name": "app",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "node scripts/copy-dsfr.js && next build",
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint --write .",
		"lint:check": "biome lint .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"dev": "node scripts/copy-dsfr.js && next dev --turbo",
		"preview": "next build && next start",
		"start": "next start",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:lighthouse": "lhci collect --url=${LIGHTHOUSE_URL:-http://localhost:3000} && lhci upload && lhci assert",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@auth/drizzle-adapter": "^1.11.1",
		"@gouvfr/dsfr": "^1.14.3",
		"@sentry/nextjs": "^10.39.0",
		"@socialgouv/matomo-next": "^1.11.0",
		"@t3-oss/env-nextjs": "^0.13.10",
		"@tanstack/react-query": "^5.90.21",
		"@trpc/client": "^11.0.0",
		"@trpc/react-query": "^11.10.0",
		"@trpc/server": "^11.0.0",
		"drizzle-orm": "^0.45.1",
		"next": "^16.1.6",
		"next-auth": "4.24.13",
		"postgres": "^3.4.8",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"server-only": "^0.0.1",
		"superjson": "^2.2.6",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.2",
		"@lhci/cli": "^0.15.1",
		"@playwright/test": "^1.58.2",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^25.2.3",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.4",
		"@vitest/coverage-v8": "^4.0.18",
		"drizzle-kit": "^0.31.9",
		"jsdom": "^28.1.0",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^6.1.1",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.8.1"
}
