{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // to trick auto imports
    "baseUrl": "./../",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@design-system": [
        "src/design-system/index"
      ]
    },
  },
  "include": [
    "./../next-env.d.ts",
    "./../**/*.ts",
    "./../**/*.tsx"
  ],
  // override tests folder exclusion
  "exclude": [
    "node_modules",
    "__stories__/"
  ]
}