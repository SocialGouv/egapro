{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../src/",
    "paths": {
      "@common/*": [
        "./common/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@design-system": [
        "./design-system/index"
      ],
      "@design-system/theme": [
        "./design-system/theme"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "../node_modules"
  ]
}