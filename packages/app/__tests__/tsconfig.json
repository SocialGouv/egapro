{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "../src/*"
      ],
      "@common/*": [
        "../src/common/*"
      ],
      "@components/*": [
        "../src/components/*"
      ]
    }
  },
  // override tests folder exclusion
  "exclude": [
    "../node_modules"
  ]
}