{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "types": [
      "node",
      "jest",
      "testing-library__jest-dom"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "../../",
    "paths": {
      "@common/*": [
        "packages/app/src/common/*"
      ],
      "@components/*": [
        "packages/app/src/components/*"
      ],
      "@api/*": [
        "packages/app/src/api/*"
      ],
      "@services/*": [
        "packages/app/src/services/*"
      ],
      "@design-system": [
        "packages/app/src/design-system/server"
      ],
      "@design-system/client": [
        "packages/app/src/design-system/client"
      ],
      "@design-system/utils/*": [
        "packages/app/src/design-system/utils/*"
      ],
      "@design-system/hooks/*": [
        "packages/app/src/design-system/hooks/*"
      ],
      "@public/*": [
        "packages/app/public/*"
      ],
      "@globalActions/*": [
        "packages/app/src/app/_globalActions/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./global.d.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress.config.ts",
    "cypress"
  ]
}
