{
  "extends": "@tsconfig/next",
  "compilerOptions": {
    "strict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    // to trick auto imports
    "baseUrl": "../../",
    "paths": {
      "@common/*": [
        "packages/app/src/common/*"
      ],
      "@components/*": [
        "packages/app/src/components/*"
      ],
      "@api/*": [
        "packages/app/src/api/*"
      ],
      "@services/*": [
        "packages/app/src/services/*"
      ],
      "@design-system": [
        "packages/app/src/design-system/server"
      ],
      "@design-system/client": [
        "packages/app/src/design-system/client"
      ],
      "@design-system/utils/*": [
        "packages/app/src/design-system/utils/*"
      ],
      "@design-system/hooks/*": [
        "packages/app/src/design-system/hooks/*"
      ],
      "@public/*": [
        "packages/app/public/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "transpileOnly": true
  },
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "global.d.ts",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(default)/index-egapro_/simulateur/(funnel)/@large/[...catchAll]"
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}