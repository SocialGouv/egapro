{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // to trick auto imports
    "baseUrl": "../../",
    "paths": {
      "@common/*": [
        "packages/app/src/common/*"
      ],
      "@components/*": [
        "packages/app/src/components/*"
      ],
      "@design-system": [
        "packages/app/src/design-system/index"
      ]
    },
    "plugins": [{"name": "typescript-plugin-css-modules"}]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "__stories__"
  ]
}