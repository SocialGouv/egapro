{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    // to trick auto imports
    "baseUrl": "../../",
    "paths": {
      "@common/*": [
        "packages/app/src/common/*"
      ],
      "@components/*": [
        "packages/app/src/components/*"
      ],
      "@api/*": [
        "packages/app/src/api/*"
      ],
      "@services/*": [
        "packages/app/src/services/*"
      ],
      "@design-system": [
        "packages/app/src/design-system/index"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
    "transpileOnly": true
  },
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "__stories__"
  ]
}