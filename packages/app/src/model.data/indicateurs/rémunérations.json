{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://index-egapro.travail.gouv.fr/api/v2/model.data/indicateurs/rémunération.json",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "enum": [
        "csp",
        "niveau_branche",
        "niveau_autre"
      ]
    },
    "non_calculable": {
      "type": "string",
      "enum": [
        "egvi40pcet",
        "am"
      ],
      "description": "Vide ou egvi40pcet: Effectif des groupes valides inférieur à 40% de l'effectif total"
    },
    "date_consultation_cse": {
      "type": "string",
      "format": "date",
      "description": "Uniquement pour les modalités de calcul par niveau ou coefficient hiérarchique en application de la classification de branche ou d'une autre méthode de cotation des postes"
    },
    "catégories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "nom": {
            "type": "string"
          },
          "tranches": {
            "type": "object",
            "properties": {
              ":29": {
                "type": "number"
              },
              "30:39": {
                "type": "number"
              },
              "40:49": {
                "type": "number"
              },
              "50:": {
                "type": "number"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "résultat": true,
    "population_favorable": true,
    "objectif_de_progression": true,
    "note": {
      "readOnly": true,
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "$ref": "./base_indicateur.json#with_population_favorable"
    }
  ],
  "description": "Indicateur 1 relatif à l'écart de rémunération entre les femmes et les hommes"
}