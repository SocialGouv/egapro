{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": ["vitest/globals", "@testing-library/jest-dom"]
	},
	"include": [
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		"src/test/**/*.ts",
		"src/test/**/*.tsx"
	],
	"exclude": ["node_modules"]
}
